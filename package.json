{
  "name": "@cotizai-app/backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:vercel": "tsc --project tsconfig.vercel.json --noEmitOnError false --skipLibCheck true || echo 'Build completed with warnings'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev": "nest start --watch",
    "serve": "nest start --watch",
    "serve:prod": "nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@cotizai-app/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@cotizai-app/backend:build:development"
          },
          "production": {
            "buildTarget": "@cotizai-app/backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/mongodb": "^4.0.6",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "mongodb": "^6.18.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "ts-node": "^10.9.1"
  }
}
